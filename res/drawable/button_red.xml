<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/btn_red_dark"
                android:endColor="@color/btn_red_light"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/btn_red_light" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>        
        <shape>
            <gradient
                android:startColor="@color/btn_red_light"
                android:endColor="@color/btn_red_dark"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/btn_red_dark" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>